/* ==========================================================================
   THEME STYLES - Fixers in Greece (Dark Theme)
   ========================================================================== */

/* Dark Theme Implementation - NO !important declarations */
/* This file provides dark theme styles that work with our CSS architecture */

/* Theme-specific CSS Custom Properties */
:root {
  /* Dark Theme Colors */
  --theme-background: #0a0a0a;
  --theme-surface: #1a1a1a;
  --theme-surface-elevated: #2a2a2a;
  --theme-text: #ffffff;
  --theme-text-muted: #b4b4b4;
  --theme-text-subtle: #888888;
  --theme-border: rgba(255, 255, 255, 0.1);
  --theme-border-strong: rgba(255, 255, 255, 0.2);
  
  /* Override base colors for dark theme */
  --color-background: var(--theme-background);
  --color-surface: var(--theme-surface);
  --color-text: var(--theme-text);
  --color-text-muted: var(--theme-text-muted);
}

/* Body and Main Layout */
body {
  background-color: var(--theme-background);
  color: var(--theme-text);
}

/* Header and Navigation - Specific selectors, no !important */
.site-header {
  background-color: var(--theme-surface);
  border-bottom-color: var(--theme-border);
}

.header-container {
  background-color: var(--theme-surface);
}

/* Navigation Menu Styles */
.nav-menu .nav-link {
  color: var(--theme-text);
}

.nav-menu .nav-link:hover {
  color: var(--color-primary);
  background-color: rgba(249, 165, 49, 0.1);
}

.nav-menu .nav-link.active {
  color: var(--color-primary);
}

/* Sub-menu and Dropdown Styles */
.dropdown-menu,
.sub-menu {
  background-color: var(--theme-surface-elevated);
  border-color: var(--theme-border);
}

.dropdown-menu .dropdown-item,
.sub-menu li a {
  color: var(--theme-text);
  border-bottom-color: var(--theme-border);
}

.dropdown-menu .dropdown-item:hover,
.sub-menu li a:hover {
  color: var(--color-primary);
  background-color: rgba(249, 165, 49, 0.1);
}

/* Content Areas */
.container,
.content-wrap,
.main-content,
.entry,
.article {
  background-color: transparent;
  color: var(--theme-text);
}

/* Typography - Headings */
h1, h2, h3, h4, h5, h6,
.heading,
.title,
.page-title,
.entry-title {
  color: var(--color-primary);
}

/* Body Text Elements */
p, li, span, div,
.text,
.content,
.description {
  color: var(--theme-text);
}

/* Links - Specific styling without global override */
.content a,
.text a,
.description a,
p a,
li a {
  color: var(--color-primary);
}

.content a:hover,
.text a:hover,
.description a:hover,
p a:hover,
li a:hover {
  color: var(--color-secondary);
}

/* Form Elements */
.form-control,
input[type="text"],
input[type="email"],
input[type="password"],
input[type="tel"],
input[type="url"],
textarea,
select {
  background-color: var(--theme-surface);
  border-color: var(--theme-border);
  color: var(--theme-text);
}

.form-control:focus,
input:focus,
textarea:focus,
select:focus {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 0.2rem rgba(249, 165, 49, 0.25);
}

.form-control::placeholder,
input::placeholder,
textarea::placeholder {
  color: var(--theme-text-muted);
}

/* Card Components */
.card {
  background-color: var(--theme-surface);
  border-color: var(--theme-border);
}

.card-header {
  background-color: var(--theme-surface-elevated);
  border-bottom-color: var(--theme-border);
}

.card-footer {
  background-color: var(--theme-surface-elevated);
  border-top-color: var(--theme-border);
}

/* Tables */
.table {
  color: var(--theme-text);
}

.table th {
  background-color: var(--theme-surface);
  border-bottom-color: var(--theme-border);
  color: var(--color-primary);
}

.table td {
  border-top-color: var(--theme-border);
}

.table-striped tbody tr:nth-of-type(odd) {
  background-color: rgba(255, 255, 255, 0.02);
}

.table-hover tbody tr:hover {
  background-color: rgba(255, 255, 255, 0.05);
}

/* Blockquotes */
blockquote {
  background-color: var(--theme-surface);
  border-left-color: var(--color-primary);
  color: var(--theme-text);
}

/* Code Elements */
code, pre {
  background-color: var(--theme-surface);
  color: var(--color-primary);
  border-color: var(--theme-border);
}

/* Pagination */
.pagination .page-link {
  background-color: var(--theme-surface);
  color: var(--theme-text);
  border-color: var(--theme-border);
}

.pagination .page-link:hover {
  background-color: var(--color-primary);
  color: #000000;
}

.pagination .page-item.active .page-link {
  background-color: var(--color-primary);
  color: #000000;
  border-color: var(--color-primary);
}

/* Social Media Icons */
.social-links a {
  background-color: var(--theme-surface);
  color: var(--color-primary);
  border-color: var(--theme-border);
}

.social-links a:hover {
  background-color: var(--color-primary);
  color: #000000;
}

/* WordPress Specific Elements */
.wp-block-quote {
  background-color: var(--theme-surface);
  border-left-color: var(--color-primary);
}

.wp-block-code {
  background-color: var(--theme-surface);
  color: var(--color-primary);
}

.wp-block-table {
  color: var(--theme-text);
}

.wp-block-table th {
  background-color: var(--theme-surface);
  color: var(--color-primary);
}

/* Visual Composer Elements */
.vc_row {
  background-color: transparent;
}

.wpb_text_column p,
.wpb_text_column li,
.wpb_text_column span {
  color: var(--theme-text);
}

.wpb_text_column h2,
.wpb_text_column h3,
.wpb_text_column h4 {
  color: var(--color-primary);
}

.vcex-heading,
.vcex-heading-inner {
  color: var(--color-primary);
}

/* Accent Colors */
.accent-color,
.text-accent {
  color: var(--color-primary);
}

.bg-accent {
  background-color: var(--color-primary);
}

/* Border Colors */
.border-gray-100,
.border-gray-200,
.border-gray-300,
.border-gray-400,
.border-gray-500,
.border-gray-600,
.border-gray-700,
.border-gray-800,
.border-gray-900 {
  border-color: var(--theme-border);
}

/* Scrollbar Styling */
::-webkit-scrollbar {
  width: 12px;
}

::-webkit-scrollbar-track {
  background: var(--theme-surface);
}

::-webkit-scrollbar-thumb {
  background: var(--color-primary);
  border-radius: 6px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-secondary);
}

/* Mobile Responsive Adjustments */
@media (max-width: 768px) {
  .mobile-menu {
    background-color: var(--theme-surface);
    border-color: var(--theme-border);
  }
  
  .mobile-menu-toggle {
    color: var(--color-primary);
  }
  
  .mobile-menu-item {
    color: var(--theme-text);
    border-bottom-color: var(--theme-border);
  }
  
  .mobile-menu-item:hover {
    color: var(--color-primary);
    background-color: rgba(249, 165, 49, 0.1);
  }
}

/* Print Styles Override */
@media print {
  body {
    background-color: white;
    color: black;
  }
  
  h1, h2, h3, h4, h5, h6 {
    color: black;
  }
  
  a {
    color: black;
    text-decoration: underline;
  }
}
